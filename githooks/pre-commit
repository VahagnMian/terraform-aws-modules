#!/bin/bash
set -evx
for f in ./*modules*
do
    cd "$f"
    for i in `ls -d */`
        do terraform-docs markdown table --output-file README.md --output-mode inject "${i}";
    done
    for y in $(find . -name '*.tf' -print)
    do
         terraform fmt -write=true "${y}"
    done
    cd ..
done
